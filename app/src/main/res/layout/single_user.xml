<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/single_user_parent_view">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/single_user_profile"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/avatar"/>

    <TextView
        android:id="@+id/single_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:text="Name"
        android:textSize="22sp"
        app:layout_constraintStart_toEndOf="@+id/single_user_profile"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/single_user_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:text="Status"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/single_user_name"
        app:layout_constraintTop_toBottomOf="@+id/single_user_name" />


</androidx.constraintlayout.widget.ConstraintLayout>