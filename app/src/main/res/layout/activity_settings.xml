<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    tools:context=".SettingsActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/settings_profile_circleImageView"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:src="@drawable/avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/settings_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name"
        android:textColor="@android:color/white"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/settings_profile_circleImageView"
        app:layout_constraintStart_toStartOf="@+id/settings_profile_circleImageView"
        app:layout_constraintTop_toBottomOf="@+id/settings_profile_circleImageView" />

    <TextView
        android:id="@+id/settings_status_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Hey there! I'm using Lets Chat"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        app:layout_constraintEnd_toEndOf="@+id/settings_name_textView"
        app:layout_constraintStart_toStartOf="@+id/settings_name_textView"
        app:layout_constraintTop_toBottomOf="@+id/settings_name_textView" />

    <Button
        android:id="@+id/settings_change_profile_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="70dp"
        android:backgroundTint="@color/colorAccent"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Change Profile Picture"
        android:textColor="@android:color/white"
        app:layout_constraintEnd_toEndOf="@+id/settings_status_textView"
        app:layout_constraintStart_toStartOf="@+id/settings_status_textView"
        app:layout_constraintTop_toBottomOf="@+id/settings_status_textView" />

    <Button
        android:id="@+id/settings_change_status_button"
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:backgroundTint="@android:color/white"
        android:paddingStart="20dp"
        android:paddingEnd="20dp"
        android:text="Change Status"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="@+id/settings_change_profile_button"
        app:layout_constraintStart_toStartOf="@+id/settings_change_profile_button"
        app:layout_constraintTop_toBottomOf="@+id/settings_change_profile_button" />

</androidx.constraintlayout.widget.ConstraintLayout>